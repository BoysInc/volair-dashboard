  "components": {
    "schemas": {
      "CreateAircraftRequest": {
        "title": "CreateAircraftRequest",
        "required": [
          "model_name",
          "manufacturer",
          "registration_number",
          "seating_capacity",
          "range_km",
          "speed_kph",
          "wifi_available",
          "image",
          "status"
        ],
        "properties": {
          "model_name": {
            "type": "string"
          },
          "manufacturer": {
            "type": "string"
          },
          "registration_number": {
            "type": "string"
          },
          "seating_capacity": {
            "type": "integer"
          },
          "range_km": {
            "type": "integer"
          },
          "speed_kph": {
            "type": "integer"
          },
          "wifi_available": {
            "type": "string",
            "enum": [
              "true",
              "false"
            ]
          },
          "media_ids": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "Available",
              "Maintenance",
              "Unavailable"
            ]
          },
          "price_per_hour_usd": {
            "type": "integer"
          }
        },
        "type": "object"
      },
      "CreateAirportRequest": {
        "title": "CreateAirportRequest",
        "required": [
          "name",
          "city",
          "address",
          "type",
          "latitude",
          "longitude"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "Jomo Kenyatta International Airport"
          },
          "iata_code": {
            "type": "string",
            "example": "NBO"
          },
          "city": {
            "type": "string",
            "example": "Nairobi"
          },
          "address": {
            "type": "string",
            "example": "Airport North Road, Embakasi, Nairobi"
          },
          "type": {
            "type": "string",
            "enum": [
              "Airport",
              "Airstrip"
            ],
            "example": "Airport"
          },
          "latitude": {
            "type": "number",
            "format": "float",
            "example": -1.319167
          },
          "longitude": {
            "type": "number",
            "format": "float",
            "example": 36.9275
          }
        },
        "type": "object"
      },
      "CreateOperatorRequest": {
        "title": "CreateOperatorRequest",
        "required": [
          "name",
          "email",
          "phone",
          "country",
          "license_number",
          "members"
        ],
        "properties": {
          "name": {
            "description": "Operator name",
            "type": "string"
          },
          "email": {
            "description": "Operator email",
            "type": "string"
          },
          "phone": {
            "description": "Operator phone",
            "type": "string"
          },
          "country": {
            "description": "Operator country",
            "type": "string"
          },
          "license_number": {
            "description": "Operator license",
            "type": "string"
          },
          "members": {
            "description": "Operator members",
            "type": "array",
            "items": {
              "properties": {
                "email": {
                  "description": "Member email",
                  "type": "string"
                },
                "role": {
                  "description": "Member role",
                  "type": "string",
                  "enum": [
                    "Admin",
                    "Member"
                  ]
                }
              },
              "type": "object"
            }
          }
        },
        "type": "object"
      },
      "LoginRequest": {
        "title": "LoginRequest",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "description": "User email",
            "type": "string"
          },
          "password": {
            "description": "User password",
            "type": "string"
          }
